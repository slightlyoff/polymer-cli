{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
        "*": [ "node_modules/@types/*", "node_modules/polymer-build/node_modules/*", "*"]
    }
  },
  "include": [
    "custom_typings/**/*.ts",
    "custom_typings/*.ts",
    "src/**/*.ts"
  ]
}
